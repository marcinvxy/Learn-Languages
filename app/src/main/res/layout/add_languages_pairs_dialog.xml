<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:padding="30dp"
    android:background="@color/colorNotebook"
    android:layout_height="match_parent">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="30dp"
        android:fontFamily="@font/gabriola"
        android:textColor="#000000"
        android:paddingBottom="30dp"
        android:text="Dodaj parę jezyków np.\npolski-angielski"
        android:gravity="center" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <EditText
            android:id="@+id/editText1_add_languages_pairs_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/brown"
            android:ems="10"
            android:paddingBottom="20dp" />

        <EditText
            android:id="@+id/editText2_add_languages_pairs_dialog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:backgroundTint="@color/brown"
            android:ems="10"
            android:paddingBottom="20dp" />
    </LinearLayout>
</LinearLayout>