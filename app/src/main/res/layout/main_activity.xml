<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorNotebook"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView1_main_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Learn\nLanguages"
        android:textColor="#0101B4"
        android:textSize="46sp"
        app:fontFamily="@font/gabriola"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.153"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.076" />

    <TextView
        android:id="@+id/textView_main_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:text="Your book of words"
        android:textColor="#0101B4"
        app:fontFamily="@font/gabriola"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.126"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView1_main_activity"
        app:layout_constraintVertical_bias="0.0" />

    <Button
        android:id="@+id/button1_main_activity"
        android:layout_width="237dp"
        android:layout_height="60dp"
        android:background="@drawable/startbutton"
        app:layout_constraintBottom_toTopOf="@+id/button2_main_activity"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        android:onClick="startQuizActivity"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.924" />

    <Button
        android:id="@+id/button2_main_activity"
        android:layout_width="237dp"
        android:layout_height="60dp"
        android:background="@drawable/addbutton"
        android:onClick="addWordsActivity"
        app:layout_constraintBottom_toTopOf="@+id/button3_main_activity"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.94" />

    <Button
        android:id="@+id/button3_main_activity"
        android:layout_width="237dp"
        android:layout_height="60dp"
        android:background="@drawable/exitbutton"
        android:onClick="exit"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.504"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.831" />

    <ImageView
        android:layout_width="298dp"
        android:layout_height="661dp"
        android:layout_marginTop="44dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/textView1_main_activity"
        app:srcCompat="@drawable/line2" />

    <TextView
        android:id="@+id/textView2_main_activity"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Â©  2021 by Learn A Languages "
        android:textSize="16dp"
        app:fontFamily="@font/gabriola"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.988" />
</androidx.constraintlayout.widget.ConstraintLayout>